<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.doron.frag.FormFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/headline"
        android:textSize="24dp"
        android:layout_marginBottom="150dp"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_message"
        />
    <EditText android:id="@+id/sheeps_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint=""
        android:inputType="number"
        android:digits="1234567890"
        />
    <SeekBar android:id="@+id/sheeps_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button android:id="@+id/select_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />

        <CheckBox android:id="@+id/with_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/with_food"
            android:layout_alignBaseline="@+id/select_food"
            android:layout_alignBottom="@+id/select_food"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <Button android:id="@+id/make_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_send" />

    </LinearLayout>

</FrameLayout>
